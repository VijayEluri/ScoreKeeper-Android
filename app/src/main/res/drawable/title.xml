<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#4c98c6" />
            <gradient android:angle="-90" android:startColor="#3f7aa1" android:endColor="#4c98c6" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#4c98c6" />
            <solid android:color="#4c98c6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#3f7aa1" />
            <gradient android:angle="-90" android:startColor="#4c98c6" android:endColor="#3f7aa1" />
        </shape>
    </item>
</selector>